<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HealthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bb_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            style="@style/viewParent.headerText"
            android:text="Health Profile" />

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Current Height"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_height_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="160cm"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView50"
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Weight"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_weight_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="54KG"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6xxx"
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body fat"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_fat_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="54KG"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView60"
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI Chart"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="400dp"
            android:layout_height="229dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/combinationchart" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Health Details"
            app:backgroundTint="@color/dark_secondary" />

    </LinearLayout>

</ScrollView>